{
  "name": "beancounter-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "start:prod": "NODE_ENV=production node build/server.js",
    "prettier": "prettier --write 'src/**/*.{ts*,json,md,yml,js}' && yarn lint",
    "prettier:check": "prettier  --check 'src/**/*.ts*' && yarn lint",
    "lint": "eslint 'src/**/*.ts*' && yarn lint-md",
    "lint-md": "remark .",
    "test": "razzle test --env=jsdom"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "axios-hooks": "^1.6.0",
    "detect-node": "^2.0.4",
    "express": "^4.17.1",
    "i18next": "^19.0.0",
    "i18next-browser-languagedetector": "^4.0.1",
    "i18next-express-middleware": "^1.8.2",
    "i18next-node-fs-backend": "^2.1.3",
    "i18next-xhr-backend": "^3.2.2",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-i18next": "^11.2.5",
    "react-loadable": "^5.5.0",
    "react-number-format": "^4.0.8",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.1.2",
    "react-select": "^3.0.8",
    "react-switch": "^5.0.1",
    "react-table": "^7.0.0-beta.12",
    "remark-lint": "^6.0.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.1",
    "@testing-library/dom": "^6.10.0",
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.1",
    "@testing-library/react-hooks": "^3.1.1",
    "@types/express": "^4.16.1",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.1",
    "@types/ramda": "^0.26.33",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.9.2",
    "@types/react-helmet": "^5.0.14",
    "@types/react-loadable": "^5.5.2",
    "@types/react-router": "^5.1.2",
    "@types/react-router-dom": "^5.1.2",
    "@types/react-select": "^3.0.8",
    "@types/webpack": "^4.39.3",
    "@types/webpack-env": "^1.14.0",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.4.0",
    "autoprefixer": "^9.7.0",
    "babel-jest": "^24.9.0",
    "bulma": "^0.8.0",
    "bulma-start": "^0.0.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-jest": "^23.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "husky": "^3.0.9",
    "jest": "^24.8.0",
    "jest-emotion": "^10.0.17",
    "jest-junit": "^9.0.0",
    "lint-staged": "^9.4.2",
    "nock": "^11.7.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "ramda": "^0.26.1",
    "razzle": "^3.0.0",
    "razzle-plugin-scss": "^3.0.0",
    "razzle-plugin-typescript": "^3.0.0",
    "react-hot-loader": "^4.12.15",
    "react-test-renderer": "^16.9.0",
    "remark-cli": "^7.0.0",
    "remark-lint-no-literal-urls": "^1.0.3",
    "remark-preset-lint-recommended": "^3.0.3",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.36.1"
  },
  "pkg": {
    "scripts": "build/public/static2/**/*.js",
    "assets": [
      "build/public/static2/**/*.svg",
      "build/public/static2/**/*.css",
      "node_modules/**/*.sass"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier",
      "git add"
    ]
  },
  "jest-junit": {
    "output": "reports/junit/junit.xml",
    "usePathForSuiteName": "true"
  },
  "jest": {
    "coverageReporters": [
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [],
    "testMatch": [
      "<rootDir>/src/**/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
