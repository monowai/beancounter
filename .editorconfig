# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation for Kotlin files
[*.{kt,kts}]
indent_style = space
indent_size = 4

# 2 space indentation for Gradle files
[*.gradle]
indent_style = space
indent_size = 2

# Tab indentation (no size specified) for Makefile
[Makefile]
indent_style = tab

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

# Matches the exact file .editorconfig
[.editorconfig]
indent_style = space
indent_size = 2

# Tab indentation in all Markdown files
[*.md]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# 2 space indentation for XML, YAML, and YML files
[{*.xml,*.yml,*.yaml}]
indent_style = space
indent_size = 2