# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{kt,kts}]
charset = utf-8

# 4 space indentation
[*.kt]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

# Matches the exact file .editorconfig
[.editorconfig]
indent_style = space
indent_size = 2

# Tab indentation in all Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Checkstyle and ktlint
[{*.gradle,*.xml,*.yml,*.yaml}]
indent_style = space
indent_size = 2
